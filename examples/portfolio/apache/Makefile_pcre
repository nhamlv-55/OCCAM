#iam 7/13/2018

THISDIR =  $(shell pwd)
OS      =  $(shell uname)
ARCH    =  $(shell uname -p)

LLVMCC ?= gclang
LLVMCXX ?= gclang++
LLVMGET ?= get-bc

ifeq (Darwin, $(findstring Darwin, ${OS}))
LIBEXT=dylib
# ian's FAILED latest magic to get LLVM's clang++ to work like Apple's clang++
# RESOURCE_DIR = $(shell /usr/bin/clang++ --print-resource-dir)
# INCLUDE_DIR = ${RESOURCE_DIR}/include
# CXXFLAGS =  "-I/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include/c++/v1 -I/usr/local/include -I${INCLUDE_DIR} -I/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/include "
else
LIBEXT=so
endif


PCRE_VERSION ?= 8.42


PCRE=pcre-${PCRE_VERSION}
PCRE_TARBALL=${PCRE}.tar.gz
PCRE_URL=https://ftp.pcre.org/pub/pcre/${PCRE_TARBALL}
PCRE_LIB=libpcre.${LIBEXT}
PCRE_BITCODE=${PCRE_LIB}.bc
PCRE_INSTALL=${THISDIR}/install/${PCRE}

all: ${PCRE_BITCODE}

${PCRE_TARBALL}:
	wget ${PCRE_URL}

${PCRE}: ${PCRE_TARBALL}
	tar xvfz ${PCRE_TARBALL}

${PCRE_INSTALL}/lib/${PCRE_LIB}: ${PCRE}
	cd ${PCRE}                                                                              && \
	CXX=${LLVMCXX} CC=${LLVMCC} CXXFLAGS=${CXXFLAGS} ./configure --prefix=${PCRE_INSTALL}   && \
	CXX=${LLVMCXX} CC=${LLVMCC} make 	                                                && \
	make install

${PCRE_BITCODE}: ${PCRE_INSTALL}/lib/${PCRE_LIB}
	cd  ${PCRE_INSTALL}/lib/                                                           && \
	${LLVMGET} ${PCRE_LIB}                                                             && \
	cp libpcre*${LIBEXT}*.bc ${THISDIR}/${PCRE_BITCODE}

clean:
	rm -rf *~ ${PCRE_BITCODE}


very_clean: clean
	make -C ${PCRE} clean
	rm -rf ${PCRE_INSTALL}

spotless: very_clean
	rm -rf ${PCRE_TARBALL} ${PCRE} 
